@if (Model.Status != MemberApi.Models.Services.ContactStatus.Lockout)
{
    <form style="display:inline;" method="post">
        <input type="hidden" name="id" value="@Model.ContactId" />
        <input type="hidden" name="status" value="@MemberApi.Models.Services.ContactStatus.Lockout" />
        <button type="submit"  asp-action="Post" class="btn btn-xs btn-success">Lockout</button>
    </form>

}

@if (Model.Status != MemberApi.Models.Services.ContactStatus.Approved)
{
    <form style="display:inline;" method="post">
        <input type="hidden" name="id" value="@Model.ContactId" />
        <input type="hidden" name="status" value="@MemberApi.Models.Services.ContactStatus.Approved" />
        <button type="submit" asp-action="Post" class="btn btn-xs btn-success">Approve</button>
    </form>
}


