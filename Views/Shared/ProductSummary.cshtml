@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div>
        <span class="card-text p-1">
            @Model.Description
        </span>
    </div>

   
    <div>
        <a asp-action="Edit" asp-controller="Product" asp-route-id="@Model.ProductId">Edit</a> |
        <a asp-action="Delete" asp-controller="Product" asp-route-id="@Model.ProductId">Delete</a>
    </div>
</div>
